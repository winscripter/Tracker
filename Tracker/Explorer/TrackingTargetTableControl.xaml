<UserControl x:Class="Tracker.Explorer.TrackingTargetTableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tracker.Explorer"
             mc:Ignorable="d" 
             MinHeight="50" MinWidth="150">
    <StackPanel Background="{DynamicResource CommonPaneBG}" Orientation="Horizontal" Opacity="1.0" x:Name="baseStackPanel">
        <TextBlock Text="{Binding DisplayMemberName}" Foreground="{DynamicResource CommonPaneFG}" FontSize="16" VerticalAlignment="Center" Margin="3 0 0 0" />
    </StackPanel>
</UserControl>