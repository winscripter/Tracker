<UserControl x:Class="Tracker.Explorer.NoProjectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tracker.Explorer"
             mc:Ignorable="d" 
             MinWidth="180" MinHeight="180">
    <Grid Background="{DynamicResource CommonPaneBG}">
        <StackPanel VerticalAlignment="Center">
            <Canvas Height="64" Width="64">
                <Ellipse Width="64" Height="64" Stroke="Red" StrokeThickness="8" Canvas.Left="0" Canvas.Top="0"/>
                <Line X1="14" Y1="14" X2="50" Y2="50" Stroke="Red" StrokeThickness="8" />
            </Canvas>
            <TextBox Background="Transparent"
                     Foreground="{DynamicResource CommonPaneFG}"
                     BorderThickness="0"
                     Text="No project"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     Height="40"
                     FontSize="28" />   
        </StackPanel>
    </Grid>
</UserControl>
